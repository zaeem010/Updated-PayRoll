@model List<PayRoll.ViewModelQuery.EmployeeVMQ>
@{
    ViewBag.Title = "Index";
}
<div class="content-wrapper">

    <!-- Container-fluid starts -->
    <!-- Main content starts -->
    <div class="container-fluid">
        <div class="row">
            <div class="main-header">
            </div>
        </div>
        <div id="mydiv" class="col-md-3">
            <p class="text-center bg-success">@TempData["Update"]</p>
            <p class="text-center bg-success">@TempData["Status"]</p>
        </div>
        <div class="col-lg-12">
            <a href="@Url.Action("Create","Employee")" class="btn btn-skype offset-lg-10"><i class="fa fa-plus"></i>  Create New</a>
            <div class="card" style="margin-top:20px">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="card-header-text"><u>Employee Tables</u></h5>
                            </div>
                            <div class="card-block">
                                <div style="overflow-x:auto">
                                    <table id="advanced-table" class="table table-striped table-bordered nowrap">
                                        <thead>
                                            <tr>
                                                <th>Image</th>
                                                <th>Status</th>
                                                <th>Emp Code</th>
                                                <th>Name</th>
                                                <th>Cnic</th>
                                                <th>DOB</th>
                                                <th>Designation</th>
                                                <th>Department</th>
                                                <th>Roaster</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tfoot>
                                            <tr>
                                                <th>Image</th>
                                                <th>Image</th>
                                                <th>Emp Code</th>
                                                <th>Name</th>
                                                <th>Cnic</th>
                                                <th>DOB</th>
                                                <th>Designation</th>
                                                <th>Department</th>
                                                <th>Roaster</th>
                                                <th>Action</th>
                                            </tr>
                                        </tfoot>
                                        <tbody>
                                            @foreach (var lst in Model)
                                            {
                                            <tr>
                                                @if (lst.Image == null || lst.Image == "")
                                                {
                                                    <td style="text-align:center;width:50px"><img src="~/Uploads/demo.jpg" width="50" height="50" class="img-thumbnail" /></td>
                                                }
                                                else
                                                {
                                                    <td style="text-align:center;width:50px"><img src="~/Uploads/@lst.Image" width="50" height="50" class="img-thumbnail" /></td>
                                                }
                                                <td><span class="badge badge-success" style="color:white"><b>@lst.EmployeeStatus</b></span></td>
                                                <td>@lst.EmpCode</td>
                                                <td>@lst.Name</td>
                                                <td>@lst.Cnic</td>
                                                <td>@lst.DOB</td>
                                                <td>@lst.Designation</td>
                                                <td>@lst.Depart</td>
                                                <td>@lst.Roaster</td>
                                                <td style="width:30px; text-align:center;">
                                                    <a href="@Url.Action("Edit", new { id = lst.id })" class="badge badge-primary" data-toggle="tooltip" data-placement="left" title="Click Me To Edit"><i class="fa fa-pencil"></i></a>
                                                    <a class="badge  badge-success b-rounded" data-toggle="modal" title="Click Me To View" data-target="#recent-@lst.id"><i class="fa fa-dot-circle-o"></i></a>
                                                </td>
                                                </tr>
                                                <div class="modal fade" id="recent-@lst.id">
                                                    <div class="modal-dialog modal-lg">
                                                        <div class="modal-content col-md-6" style="margin-left:200px">
                                                            <div class="modal-header" style="background-color:#00AFF0">
                                                                <h4 class="modal-title text-center" style="color:white">Change Employee Status</h4>
                                                            </div>
                                                            <div style="overflow-x:auto">
                                                                <div class="modal-body">
                                                                    <div class="card-block">
                                                                        @using (Html.BeginForm("Update", "Employee", FormMethod.Post, new { enctype = "multipart/form-data" }))
                                                                        {
                                                                            @Html.AntiForgeryToken()
                                                                            <input type="hidden" name="Emp" value="@lst.EmpCode" />
                                                                            <div class="row">
                                                                                <div class="col-md-4">
                                                                                    <label style="color:red">Block</label>
                                                                                    <input type="radio" name="St" class="form-control" value="Block" />
                                                                                </div>
                                                                                <div class="col-md-4">
                                                                                    <label style="color:lightseagreen">Resign</label>
                                                                                    <input type="radio" name="St" class="form-control" value="Resign" />
                                                                                </div>
                                                                                <div class="col-md-4">
                                                                                    <label>Resign Date</label>
                                                                                    <input type="date" name="Date" class="form-control" value="" />
                                                                                </div>
                                                                                <div class="col-md-12">
                                                                                    <label>Description</label>
                                                                                    <input type="text" name="Des" class="form-control" value="" />
                                                                                </div>
                                                                            </div>
                                                                            <br />
                                                                            <div class="row col-lg-offset-8  ">
                                                                                <div class="col-lg-offset-8 col-md-4 ">
                                                                                    <button type="submit" class="btn btn-primary pull-left"><i class="fa fa-first-order"></i>&nbsp;Change Status </button>
                                                                                </div>
                                                                                <button type="button" class="btn  btn-primary pull-right" data-dismiss="modal">Close</button>
                                                                            </div>
                                                                        }
                                                                    </div>
                                                                    </div>

                                                                </div>
                                                            </div>
                                                        </div>

                                                    </div>
                                              
                                            }
                                        </tbody>
                                    </table>
                                </div>
                                
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <!-- Main content ends -->
    <!-- Container-fluid ends -->
</div>
<script>
    setTimeout(function () {
        $('#mydiv').fadeOut('fast');
    }, 3000); // <-- time in milliseconds
</script>