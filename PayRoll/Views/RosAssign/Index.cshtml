@model List<PayRoll.ViewModelQuery.RsAssignVMQ>
@{
    ViewBag.Title = "Index";
}
<div class="content-wrapper">

    <!-- Container-fluid starts -->
    <!-- Main content starts -->
    <div class="container-fluid">
        <div class="row">
            <div class="main-header">
            </div>
        </div>
        <div id="mydiv" class="col-md-3">
            <p class="text-center bg-success">@TempData["Update"]</p>
            <p class="text-center bg-danger">@TempData["Duplicate"]</p>
        </div>
        <div class="col-lg-12">
            <a href="@Url.Action("Create","RosAssign")" class="btn btn-skype offset-lg-10"><i class="fa fa-plus"></i>  Create New</a>
            <div class="card" style="margin-top:20px">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="card-header-text"><u>Assigned Roasters</u></h5>
                            </div>
                            <div class="card-block">
                                <input type="checkbox" id="chkAll" class="" style="margin-top:5px" /><i class="fa fa-users" style="color:blueviolet;font-size:20px"></i>Select All
                                @using (Html.BeginForm("Report", "RosAssign", FormMethod.Post, new { enctype = "multipart/form-data" }))
                                {
                                    @Html.AntiForgeryToken()
                                    <table id="advanced-table" class="table dt-responsive table-striped table-bordered nowrap">
                                        <thead>
                                            <tr>
                                                <th>#</th>
                                                <th>Shift Name</th>
                                                <th>Shift Assign DateTime</th>
                                            </tr>
                                        </thead>
                                        <tfoot>
                                            <tr>
                                                <th></th>
                                                <th></th>
                                                <th></th>
                                            </tr>
                                        </tfoot>
                                        <tbody>
                                            @foreach (var lst in Model)
                                            {
                                                <tr>
                                                    <td><input type="checkbox" name="Rsid" value="@lst.RsAssignid" /> @lst.RsAssignid</td>
                                                    <td>@lst.Name</td>
                                                    <td>@lst.DateTime</td>
                                                    @*<td>
                                <a href="@Url.Action("Edit", new { id = lst.RsAssignid })" class="badge badge-primary" data-toggle="tooltip" data-placement="left" title="Click Me To Edit"><i class="fa fa-pencil"></i></a>
                            </td>*@
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                    <div class="col-md-6 offset-sm-4">
                                        <button type="submit" formtarget="_blank" class="btn btn-primary col-md-8" style="margin-top:30px" onclick="return confirm('Do you want to Print ..')"><i class="fa fa-print"></i> Proceed</button>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <!-- Main content ends -->
    <!-- Container-fluid ends -->
</div>
