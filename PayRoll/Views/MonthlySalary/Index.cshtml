@{
    ViewBag.Title = "Index";
}
<div class="content-wrapper">

<!-- Container-fluid starts -->
<!-- Main content starts -->
<div class="container-fluid">
    <div class="row">
        <div class="main-header">
        </div>
    </div>
    <div id="mydiv" class="col-md-3">
        <p class="text-center bg-success">@TempData["Update"]</p>
        <p class="text-center bg-danger">@TempData["Duplicate"]</p>
    </div>
    <div class="col-lg-12">
        @*<a href="@Url.Action("Create","Salary")" class="btn btn-skype offset-lg-10"><i class="fa fa-plus"></i>  Create New</a>*@
        <div class="card" style="margin-top:20px">
            <div class="row">
                <div class="col-sm-12">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-header-text"><u>Monthly Salaries</u></h5>
                        </div>
                        @using (Html.BeginForm("Search", "MonthlySalary", FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {
                            @Html.AntiForgeryToken()
                            <div class="card-block">
                                <div class="row">
                                    <div class="col-md-4">
                                        <label>Select Type</label>
                                        <select class="form-control search" name="Type">
                                            <option disabled selected>select</option>
                                            <option value="Permanent">Permanent</option>
                                            <option value="DailyWagers">Daily</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="offset-md-4 col-md-6 " style="margin-top:20px">
                                    <button type="submit" class="btn btn-primary pull-right col-md-8" style="margin-top:0px"><i class="fa fa-search"></i> Search </button>
                                </div>
                            </div>
                        }
                        </div>
                </div>
            </div>
        </div>
    </div>

</div>
<!-- Main content ends -->
<!-- Container-fluid ends -->
</div>
<script>
    $(".search").chosen();
    setTimeout(function () {
        $('#mydiv').fadeOut('fast');
    }, 3000); // <-- time in milliseconds
</script>