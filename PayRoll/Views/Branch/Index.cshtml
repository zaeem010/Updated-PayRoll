@model List<PayRoll.Models.Branch>
@{
    ViewBag.Title = "Index";
}
<div class="content-wrapper">

    <!-- Container-fluid starts -->
    <!-- Main content starts -->
    <div class="container-fluid">
        <div class="row">
            <div class="main-header">
            </div>
        </div>
        <div id="mydiv" class="col-md-3">
            <p class="text-center bg-success">@TempData["Update"]</p>
            <p class="text-center bg-danger">@TempData["Duplicate"]</p>
        </div>
        <div class="col-lg-12">
            <a href="@Url.Action("Create","Branch")" class="btn btn-skype offset-lg-10"><i class="fa fa-plus"></i>  Create New</a>
            <div class="card" style="margin-top:20px">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="card-header-text"><u>Branch Tables</u></h5>
                            </div>
                            <div class="card-block">
                                <table id="advanced-table" class="table dt-responsive table-striped table-bordered nowrap">
                                    <thead>
                                        <tr>
                                            <th>Logo</th>
                                            <th>Code</th>
                                            <th>Name</th>
                                            <th>City</th>
                                            <th>Address</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tfoot>
                                        <tr>
                                            <th>Logo</th>
                                            <th>Name</th>
                                            <th>Name</th>
                                            <th>City</th>
                                            <th>Address</th>
                                            <th>Action</th>
                                        </tr>
                                    </tfoot>
                                    <tbody>
                                        @foreach (var lst in Model)
                                        {
                                        <tr>
                                        @if (lst.BLogo == null || lst.BLogo == "")
                                        {
                                            <td style="text-align:center;width:50px"><img src="~/Uploads/demo.jpg" width="50" height="50" class="img-thumbnail" /></td>
                                        }
                                        else
                                        {
                                            <td style="text-align:center;width:50px"><img src="~/Uploads/@lst.BLogo" width="50" height="50" class="img-thumbnail" /></td>
                                        }
                                        <td>@lst.BCode</td>
                                        <td>@lst.Name</td>
                                        <td>@lst.City</td>
                                        <td width="150px">@lst.Address</td>
                                        <td style="width:30px; text-align:center;"><a href="@Url.Action("Edit", new { id = lst.id })" class="badge badge-primary" data-toggle="tooltip" data-placement="left" title="Click Me To Edit"><i class="fa fa-pencil"></i></a></td>
                                        </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <!-- Main content ends -->
    <!-- Container-fluid ends -->
</div>
<script>
    setTimeout(function () {
        $('#mydiv').fadeOut('fast');
    }, 3000); // <-- time in milliseconds
</script>