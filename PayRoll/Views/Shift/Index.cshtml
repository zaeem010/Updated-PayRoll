@model List<PayRoll.Models.Shiftes>
@{
    ViewBag.Title = "Index";
}
<div class="content-wrapper">

    <!-- Container-fluid starts -->
    <!-- Main content starts -->
    <div class="container-fluid">
        <div class="row">
            <div class="main-header">
            </div>
        </div>
        <div id="mydiv" class="col-md-3">
            <p class="text-center bg-success">@TempData["Update"]</p>
            <p class="text-center bg-danger">@TempData["Duplicate"]</p>
        </div>
        <div class="col-lg-12">
            <a href="@Url.Action("Create","Shift")" class="btn btn-skype offset-lg-10"><i class="fa fa-plus"></i>  Create New</a>
            <div class="card" style="margin-top:20px">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="card-header-text"><u>Shift Tables</u></h5>
                            </div>
                            <div class="card-block">
                                <div style="overflow-x:auto">
                                    <table id="advanced-table" class="table table-striped table-bordered nowrap">
                                        <thead>
                                            <tr>
                                                <th>Name</th>
                                                <th>Start Time</th>
                                                <th>End Time</th>
                                                <th>Shift Hours</th>
                                                <th>Early Start Time In Mins</th>
                                                <th>Late Start Time In Mins</th>
                                                <th>Early End Time In Mins</th>
                                                <th>Late End Time In Mins</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tfoot>
                                            <tr>
                                                <th>Name</th>
                                                <th>Start Time</th>
                                                <th>End Time</th>
                                                <th>End Time</th>
                                                <th>Early Start Time In Mins</th>
                                                <th>Late Start Time In Mins</th>
                                                <th>Early End Time In Mins</th>
                                                <th>Late End Time In Mins</th>
                                                <th>Action</th>
                                            </tr>
                                        </tfoot>
                                        <tbody>
                                            @foreach (var lst in Model)
                                            {
                                                <tr>
                                                    <td>@lst.Name</td>
                                                    <td>@lst.StTime.ToString("hh:mm:tt")</td>
                                                    <td>@lst.EnTime.ToString("hh:mm:tt")</td>
                                                    <td>@lst.ShiftHours</td>
                                                    <td>@lst.EarlyStTimeinMin</td>
                                                    <td>@lst.LateStTimeinMin</td>
                                                    <td>@lst.EarlyEnTimeinMin</td>
                                                    <td>@lst.LateEnTimeinMin</td>
                                                    <td style="width:30px; text-align:center;"><a href="@Url.Action("Edit", new { id = lst.id })" class="badge badge-primary" data-toggle="tooltip" data-placement="left" title="Click Me To Edit"><i class="fa fa-pencil"></i></a></td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <!-- Main content ends -->
    <!-- Container-fluid ends -->
</div>
<script>
    setTimeout(function () {
        $('#mydiv').fadeOut('fast');
    }, 3000); // <-- time in milliseconds
</script>