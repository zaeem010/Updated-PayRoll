@model List<PayRoll.Models.SalaryPackage>
@{
    ViewBag.Title = "Index";
}
<div class="content-wrapper">

    <!-- Container-fluid starts -->
    <!-- Main content starts -->
    <div class="container-fluid">
        <div class="row">
            <div class="main-header">
            </div>
        </div>
        <div id="mydiv" class="col-md-3">
            <p class="text-center bg-success">@TempData["Update"]</p>
            <p class="text-center bg-danger">@TempData["Duplicate"]</p>
        </div>
        <div class="col-lg-12">
            <a href="@Url.Action("Create","Salary")" class="btn btn-skype offset-lg-10"><i class="fa fa-plus"></i>  Create New</a>
            <div class="card" style="margin-top:20px">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="card-header-text"><u>Salary Tables</u></h5>
                            </div>
                            <div class="card-block">
                                <div style="overflow-x:auto">
                                <table id="advanced-table" class="table dt-responsive table-striped table-bordered nowrap">
                                    <thead>
                                        <tr>
                                            <th>Name</th>
                                            <th>Basic Salary</th>
                                            <th>Medical Allowance</th>
                                            <th>House Rent</th>
                                            <th>Total</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tfoot>
                                        <tr>
                                            <th>Name</th>
                                            <th>Basic Salary</th>
                                            <th>Medical Allowance</th>
                                            <th>House Rent</th>
                                            <th>House Rent</th>
                                            <th>Action</th>
                                        </tr>
                                    </tfoot>
                                    <tbody>
                                        @foreach (var lst in Model)
                                        {
                                            <tr>
                                                <td>@lst.Name</td>
                                                <td>@lst.BasicSalary</td>
                                                <td>@lst.MedicalAllowance</td>
                                                <td>@lst.HouseRent</td>
                                                <td>@lst.Total</td>
                                                <td style="width:30px; text-align:center;"><a href="@Url.Action("Edit", new { id = lst.id })" class="badge badge-primary" data-toggle="tooltip" data-placement="left" title="Click Me To Edit"><i class="fa fa-pencil"></i></a></td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <!-- Main content ends -->
    <!-- Container-fluid ends -->
</div>
<script>
    setTimeout(function () {
        $('#mydiv').fadeOut('fast');
    }, 3000); // <-- time in milliseconds
</script>