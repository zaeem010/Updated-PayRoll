@model PayRoll.ViewModel.AssignRoasterVM
@{
    ViewBag.Title = "Create";
}
<div class="content-wrapper">

    <!-- Container-fluid starts -->
    <!-- Main content starts -->
    <div class="container-fluid">
        <div class="row">
            <div class="main-header">
            </div>
        </div>
        <div id="mydiv" class="col-md-3">
            <p class="text-center bg-success">@TempData["Insert"]</p>
            <p class="text-center bg-danger">@TempData["Duplicate"]</p>
        </div>
        <div class="col-lg-12">
            <a href="@Url.Action("Index","AssignRoaster")" class="btn btn-skype offset-lg-10"><i class="fa fa-list"></i> Assigned Roasters</a>
            <div class="card" style="margin-top:20px">
                <div class="card-header">
                    <h5 class="card-header-text"><u>Assign Roaster Form</u></h5>
                </div>
                <div class="card-block">
                    @using (Html.BeginForm("Save", "AssignRoaster", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()

                        <div class="row">
                            <div class="col-md-4">
                                <label><b>Select Roaster </b>&nbsp;&nbsp;<i class="fa fa-star" style="color:red"></i></label>
                                @Html.DropDownListFor(m => m.AssignRoaster.Roasterid, new SelectList(Model.RoasterList, "id", "Name"), "Select Roaster", htmlAttributes: new { @class = "chosen-select form-control", @required = "true" })
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <table id="" class="table table-bordered"  style="margin-top:20px">
                                    <thead>
                                        <tr>
                                            <th>Days</th>
                                            <th>Shift <span style="font-size:12px;color:red">(All Fields Required)</span></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td style="width:150px">Monday <input type="hidden" name="Day" value="Monday" /></td>
                                            <td style="width:200px">
                                                <select class="form-control chosen-select" name="Shift" required>
                                                    <option value="">Select </option>
                                                    @foreach (var lst in Model.ShiftList)
                                                    {
                                                        <option @if (lst.id == Model.Monday) {<text>selected</text>} value="@lst.id">@lst.Name</option>
                                                    }
                                                </select>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="width:150px">Tuesday <input type="hidden" name="Day" value="Tuesday" /></td>
                                            <td style="width:200px">
                                                <select class="form-control chosen-select" name="Shift" required>
                                                    <option value="">Select </option>
                                                    @foreach (var lst in Model.ShiftList)
                                                    {
                                                        <option @if (lst.id == Model.Tuesday) {<text>selected</text>} value="@lst.id">@lst.Name</option>
                                                    }
                                                </select>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="width:150px">Wednesday <input type="hidden" name="Day" value="Wednesday" /></td>
                                            <td style="width:200px">
                                                <select class="form-control chosen-select" name="Shift" required>
                                                    <option value="">Select </option>
                                                    @foreach (var lst in Model.ShiftList)
                                                    {
                                                        <option @if (lst.id == Model.Wednesday) {<text>selected</text>} value="@lst.id">@lst.Name</option>
                                                    }
                                                </select>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="width:150px">Thursday <input type="hidden" name="Day" value="Thursday" /></td>
                                            <td style="width:200px">
                                                <select class="form-control chosen-select" name="Shift" required>
                                                    <option value="">Select </option>
                                                    @foreach (var lst in Model.ShiftList)
                                                    {
                                                        <option @if (lst.id == Model.Thursday) {<text>selected</text>} value="@lst.id">@lst.Name</option>
                                                    }
                                                </select>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="width:150px">Friday <input type="hidden" name="Day" value="Friday" /></td>
                                            <td style="width:200px">
                                                <select class="form-control chosen-select" name="Shift" required>
                                                    <option value="">Select </option>
                                                    @foreach (var lst in Model.ShiftList)
                                                    {
                                                        <option @if (lst.id == Model.Friday) {<text>selected</text>} value="@lst.id">@lst.Name</option>
                                                    }
                                                </select>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="width:150px">Saturday <input type="hidden" name="Day" value="Saturday" /></td>
                                            <td style="width:200px">
                                                <select class="form-control chosen-select" name="Shift" required>
                                                    <option value="">Select </option>
                                                    @foreach (var lst in Model.ShiftList)
                                                    {
                                                        <option @if (lst.id == Model.Saturday) {<text>selected</text>} value="@lst.id">@lst.Name</option>
                                                    }
                                                </select>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="width:150px">Sunday <input type="hidden" name="Day" value="Sunday" /></td>
                                            <td style="width:200px">
                                                <select class="form-control chosen-select" name="Shift" required>
                                                    <option value="">Select </option>
                                                    @foreach (var lst in Model.ShiftList)
                                                    {
                                                        <option @if (lst.id == Model.Sunday) {<text>selected</text>} value="@lst.id">@lst.Name</option>
                                                    }
                                                </select>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                            <div class="col-md-6 offset-sm-4">
                                @if (Model.AssignRoaster.id == 0)
                                {
                                    <button type="submit" class="btn btn-primary col-md-8" style="margin-top:30px" onclick="return confirm('Do you want to Save ..')"><i class="fa fa-plus"></i> Save</button>
                                }
                                else
                                {
                                    <button type="submit" class="btn btn-primary col-md-8" style="margin-top:30px" onclick="return confirm('Do you want to Update..')"><i class="fa fa-plus"></i> Update</button>
                                }
                            </div>
                            @Html.HiddenFor(m => m.AssignRoaster.id)
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <!-- Main content ends -->
    <!-- Container-fluid ends -->
</div>
<script>
    $(".chosen-select").chosen();
    setTimeout(function () {
        $('#mydiv').fadeOut('fast');
    }, 3000); // <-- time in milliseconds
    </script>