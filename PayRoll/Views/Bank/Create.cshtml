@model PayRoll.Models.Bank
@{
    ViewBag.Title = "Create";
}
<div class="content-wrapper">

    <!-- Container-fluid starts -->
    <!-- Main content starts -->
    <div class="container-fluid">
        <div class="row">
            <div class="main-header">
            </div>
        </div>
        <div id="mydiv" class="col-md-3">
            <p class="text-center bg-success">@TempData["Insert"]</p>
            <p class="text-center bg-danger">@TempData["Duplicate"]</p>
        </div>
        <div class="col-lg-12">
            <a href="@Url.Action("Index","Bank")" class="btn btn-skype offset-lg-10"><i class="fa fa-list"></i> Bank List</a>
            <div class="card" style="margin-top:20px">
                <div class="card-header">
                    <h5 class="card-header-text"><u>Bank Form</u></h5>
                </div>
                <div class="card-block">
                    @using (Html.BeginForm("Save", "Bank", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()

                        <div class="row">
                            <div class="col-md-6">
                                <label><b>Branch Code</b> &nbsp;&nbsp;<i class="fa fa-star" style="color:red"></i></label>
                                @Html.TextBoxFor(m => m.BCode, new { @class = "form-control thresold-i", @required = "true", @placeholder = "" })
                            </div>
                            <div class="col-md-6">
                                <label><b>Name</b>&nbsp;&nbsp;<i class="fa fa-star" style="color:red"></i></label>
                                @Html.TextBoxFor(m => m.Name, new { @class = "form-control thresold-i", @required = "true", @placeholder = "" })
                            </div>
                            <div class="col-md-4 top">
                                <label><b>City</b></label>
                                @Html.TextBoxFor(m => m.City, new { @class = "form-control thresold-i", @placeholder = "" })
                            </div>
                            <div class="col-md-8 top">
                                <label><b>Address</b></label>
                                @Html.TextAreaFor(m => m.Address, new { @class = "form-control thresold-i", @placeholder = "" ,rows="2",cols="3"})
                            </div>
                            <div class="col-md-6 offset-sm-4">
                                @if (Model.id == 0)
                                {
                                    <button type="submit" class="btn btn-primary col-md-8" style="margin-top:30px" onclick="return confirm('Do you want to Save ..')"><i class="fa fa-plus"></i> Save</button>
                                }
                                else
                                {
                                    <button type="submit" class="btn btn-primary col-md-8" style="margin-top:30px" onclick="return confirm('Do you want to Update..')"><i class="fa fa-plus"></i> Update</button>
                                }
                            </div>
                            @Html.HiddenFor(m => m.id)
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <!-- Main content ends -->
    <!-- Container-fluid ends -->
</div>
<script>
    setTimeout(function () {
        $('#mydiv').fadeOut('fast');
    }, 3000); // <-- time in milliseconds
</script>